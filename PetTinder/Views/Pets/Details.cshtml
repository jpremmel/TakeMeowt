
@using System.IO
@model PetTinder.Models.Pet

@{
    FileStream filestream = new FileStream(Model.Photo1, FileMode.Open);
    filestream.Read(@ViewBag.Photo, 0, @ViewBag.Photo.Length);

    var base64 = Convert.ToBase64String(@ViewBag.Photo);
    var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
}

<img src="@imgSrc" />